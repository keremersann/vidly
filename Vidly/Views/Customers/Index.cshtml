@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (!Model.Any())
{
    <p>There is no customer!</p>
}
else
{
    <table>
        <thead>
        <tr>
            <th>Customer</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr><td>@Html.ActionLink(@customer.Name, "Details","Customers", 
                            new {Id = @customer.Id}, null)</td></tr>
            }
        </tbody>
    </table>
}